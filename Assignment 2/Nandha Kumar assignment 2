import random 
import time 
while (1): 
 temp= random.randint(0, 100) 
 humi= random.randint(0, 100) 
//Assume temperature threshold as 40 
//Assume humidity threshold as 35
thresht=40
threshh=35
if temp>thresht || humi> threshh :
     print("ALERT!!! Detected temperature is: "+str(temp)+"Â°C, Detected Humidity is: "+str(humi)) 
     time.sleep(1)

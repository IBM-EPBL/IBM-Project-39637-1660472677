import random 
import time 
while (1): 
 temperature= random.randint(0, 100) 
 humidity= random.randint(0, 100) 
 #Assume temperature threshold as 50
 #Assume humidity threshold as 40
 threshtemperature=50
 threshhumidity=40
 if temperature>threshtemperature or humidity> threshhumidity :
     print("ALERT!!! Detected temperature is: "+str(temperature)+"Â°C, Detected Humidity is: "+str(humidity)) 
 time.sleep(1)
